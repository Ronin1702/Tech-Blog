<div class="main-content">
  <div class="hero">
    <h1>Tech Blog 3000</h1>
  </div>
  <input type="hidden" id="user-id" name="user-id" value="{{logged_in_id}}" />
  {{#if logged_in}}
    {{#each posts as |post| }}
      <div class="ui card">
        <a href="/posts/{{post.id}}" class="content main-title">
          <div class="right floated meta">{{formatDate post.post_date}}</div>
          <h2>{{post.post_title}}</h2>
        </a>
      </div>
    {{/each}}
  {{else}}
    {{#each posts as |post| }}
      <div class="ui card">
        <a href="/posts/{{post.id}}" class="content main-title">
          <div class="right floated meta">{{formatDate post.post_date}}</div>
          <h2>{{post.post_title}}</h2>
        </a>
      </div>
    {{/each}}
  {{/if}}
  </div>
</div>